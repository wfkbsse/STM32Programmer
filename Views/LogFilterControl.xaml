<UserControl x:Class="STM32Programmer.Views.LogFilterControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:STM32Programmer.Views"
             xmlns:models="clr-namespace:STM32Programmer.Models"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="800">
    
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        
        <TextBlock Grid.Column="0" Text="日志级别:" VerticalAlignment="Center" Margin="5"/>
        
        <ComboBox Grid.Column="1" x:Name="LogLevelComboBox" 
                  SelectedItem="{Binding MinLevel}"
                  Width="100" Margin="5">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding}"/>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        
        <TextBox Grid.Column="2" x:Name="MessageFilterTextBox" 
                 Text="{Binding MessageFilter, UpdateSourceTrigger=PropertyChanged}" 
                 Margin="5" VerticalContentAlignment="Center"
                 ToolTip="输入关键字以过滤日志消息">
            <TextBox.Style>
                <Style TargetType="TextBox">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TextBox">
                                <Border Background="{TemplateBinding Background}" 
                                        BorderBrush="{TemplateBinding BorderBrush}" 
                                        BorderThickness="{TemplateBinding BorderThickness}">
                                    <Grid>
                                        <TextBlock Text="输入关键字过滤..." Foreground="Gray" Margin="5,0,0,0"
                                                   VerticalAlignment="Center"
                                                   Visibility="{Binding Text.IsEmpty, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                        <ScrollViewer x:Name="PART_ContentHost" Margin="5,0,0,0" VerticalAlignment="Center"/>
                                    </Grid>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TextBox.Style>
        </TextBox>
        
        <TextBlock Grid.Column="3" Text="类别:" VerticalAlignment="Center" Margin="5"/>
        
        <ComboBox Grid.Column="4" x:Name="CategoryComboBox"
                  Text="{Binding CategoryFilter, UpdateSourceTrigger=PropertyChanged}"
                  IsEditable="True"
                  Width="120" Margin="5"/>
    </Grid>
</UserControl> 